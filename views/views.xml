<odoo>
  <data>
    <record id="view_stock_move_tree" model="ir.ui.view">
      <field name="name">stock.move.tree.entregas</field>
      <field name="model">stock.move</field>
      <field name="arch" type="xml">
          <tree string="Movimientos de Inventario" decoration-muted="state == 'cancel'" decoration-danger="state in ('draft', 'waiting', 'partially_available')" decoration-success="state == 'done'">
              <!-- Campos principales -->
              <field name="name"/>
              <field name="product_id"/>
              <field name="product_uom_qty"/>
              <field name="product_uom" groups="uom.group_uom"/>
              <field name="location_id"/>
              <field name="location_dest_id"/>
              <field name="state"/>
              <field name="date" invisible="1"/>
              <field name="date_deadline"/>
              
              <!-- Campos relacionados -->
              <field name="picking_id" invisible="1"/>
              <field name="origin"/>
              <field name="reference"/>
              <field name="quantity"/>
              <field name="reserved_availability"/>
              
              <!-- Campos técnicos -->
              <field name="create_uid" widget="many2one_avatar" invisible="1"/>
          </tree>
      </field>
  </record>

  <!-- Acción para la vista -->
  <record id="action_stock_move_tree" model="ir.actions.act_window">
      <field name="name">Movimientos de Stock</field>
      <field name="res_model">stock.move</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="view_stock_move_tree"/>
      <field name="search_view_id" ref="stock.view_stock_move_filter"/>
  </record>

  <!-- Elemento de menú -->
  <menuitem id="menu_stock_move_tree" 
            name="Movimientos de Stock" 
            parent="stock.menu_warehouse_report" 
            action="action_stock_move_tree" 
            sequence="20"/>


  </data>
</odoo>